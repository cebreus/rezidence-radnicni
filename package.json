{
  "name": "rezidence-radnicni",
  "version": "0.0.0",
  "description": "Basic Gulp DevStack for basic front-end development with customized Bootstrap.",
  "scripts": {
    "start": "npm run dev",
    "build": "node ./node_modules/gulp/bin/gulp.js -f gulpfile.build.js default",
    "build:validate:html": "node ./node_modules/gulp/bin/gulp.js -f gulpfile.build.js validate",
    "dev": "node ./node_modules/gulp/bin/gulp.js -f gulpfile.js default",
    "deploy-ftp": "node ./node_modules/gulp/bin/gulp.js -f gulpfile.build.js deployFtp",
    "export": "node ./node_modules/gulp/bin/gulp.js -f gulpfile.export.js default",
    "export:validate:html": "npx gulp -f gulpfile.export.js validate",
    "commit": "npx git-cz",
    "format": "npx prettier --write **/*.{css,scss,md,js,jsx,ts,tsx,json} && npm run js:fix && npm run css:fix && npm run text:fix",
    "css:lint": "npx stylelint **/*.scss",
    "css:fix": "npx stylelint --fix **/*.scss",
    "js:lint": "npx eslint '**/*.js'",
    "js:fix": "npx eslint --fix '**/*.js'",
    "text:lint": "npx remark-cli -q .",
    "text:fix": "npx remark-cli -q . -o --",
    "release": "npx release-it",
    "todo": "node ./node_modules/gulp/bin/gulp.js -f gulpfile.js todo",
    "todo:show": "npx leasot -x -r markdown -A '.txt,coffeeParser' './**/*.{js,html,njk,scss,txt,md,yml}' -i './node_modules/**/*'",
    "pre-commit": "npx lint-staged",
    "prepare": "rm -rf .husky && npx husky install && npx husky set .husky/pre-commit 'npm run pre-commit' && npx husky set .husky/commit-msg 'npx --no-install commitlint --edit'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cebreus/rezidence-radnicni.git"
  },
  "homepage": "https://github.com/cebreus/rezidence-radnicni#readme",
  "author": "Jaroslav Vrana <cebreus@live.com>",
  "private": false,
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cebreus/rezidence-radnicni/issues",
    "email": "cebreus@live.com"
  },
  "keywords": [
    "devstack",
    "gulp",
    "bootstrap"
  ],
  "dependencies": {
    "@babel/core": "^7.28.3",
    "@babel/eslint-parser": "^7.28.0",
    "autoprefixer": "^10.4.21",
    "bootstrap": "5.3.3",
    "browser-sync": "^2.29.3",
    "cssnano": "^6.1.2",
    "dotenv": "^16.6.1",
    "fancy-log": "^2.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-data": "^1.3.1",
    "gulp-empty-pipe": "^5.0.0",
    "gulp-favicons": "^4.0.1",
    "gulp-google-webfonts": "^4.1.0",
    "gulp-html-beautify": "^1.0.1",
    "gulp-html-validate": "github:cebreus/gulp-html-validate",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-inject": "^5.0.5",
    "gulp-jsbeautifier": "^3.0.1",
    "gulp-json-editor": "^2.6.0",
    "gulp-markdown-to-json": "^1.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-nunjucks-render": "^2.2.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-purgecss": "^5.0.0",
    "gulp-rename": "^2.1.0",
    "gulp-replace": "^1.1.4",
    "gulp-rev": "^10.0.0",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-rev-replace": "^0.4.4",
    "gulp-rev-rewrite": "^5.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sass-glob": "^1.1.0",
    "gulp-sri-hash": "^2.2.1",
    "gulp-todo": "^7.1.1",
    "gulp-uglify": "^3.0.2",
    "gulp-upng": "^1.0.3",
    "imagemin-mozjpeg": "^10.0.0",
    "marked": "^5.1.2",
    "nunjucks-date-filter-locale": "^1.4.3",
    "nunjucks-markdown-filter": "^0.1.0",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^2.8.8",
    "sass": "^1.91.0",
    "through2": "^4.0.2",
    "vinyl-ftp": "^0.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.28.3",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@j-ulrich/release-it-regex-bumper": "^4.1.1",
    "@release-it/conventional-changelog": "^5.1.1",
    "@visionappscz/stylelint-config": "^3.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-disable": "^2.0.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^46.10.1",
    "eslint-plugin-prettier": "^4.2.5",
    "eslint-plugin-require-sort": "^1.3.0",
    "html-validate": "^8.29.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "release-it": "^15.11.0",
    "remark": "^14.0.3",
    "remark-cli": "^11.0.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-lint-code": "^2.0.0",
    "remark-lint-heading-whitespace": "^1.0.0",
    "remark-lint-match-punctuation": "^0.2.1",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-preset-lint-consistent": "^5.1.2",
    "remark-preset-lint-markdown-style-guide": "^5.1.3",
    "remark-preset-lint-recommended": "^6.1.3",
    "stylelint": "^15.11.0",
    "stylelint-high-performance-animation": "^1.11.0",
    "stylelint-selector-bem-pattern": "^3.0.1"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{css,scss,md,js,jsx,ts,tsx,json}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.md": [
      "npm run text:fix --"
    ],
    "*.scss": [
      "stylelint --fix --allow-empty-input"
    ]
  }
}
